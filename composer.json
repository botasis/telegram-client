{
  "name": "botasis/telegram-client",
  "type": "library",
  "description": "Yet another PHP Telegram bot client",
  "keywords": ["php", "telegram", "bot", "telegram bot"],
  "license": "BSD-3-Clause",
  "support": {
    "issues": "https://github.com/botasis/telegram-bot/issues?state=open",
    "chat": "https://t.me/viktorprogger_blog",
    "source": "https://github.com/botasis/telegram-bot"
  },
  "minimum-stability": "stable",
  "require": {
    "php": "~8.2||~8.3||~8.4",
    "php-http/multipart-stream-builder": "^1.3",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0||^2.0",
    "psr/log": "^1.0.0||^2.0.0||^3.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.1",
    "roave/infection-static-analysis-plugin": "^1.16",
    "shipmonk/composer-dependency-analyser": "^1.8",
    "symfony/console": "^7.2",
    "symfony/http-client": "^7.2",
    "vimeo/psalm": "^6.8"
  },
  "suggest": {
    "symfony/http-client": "^7.0",
    "yiisoft/yii-console": "^1.0",
    "httpsoft/http-message": "^1.0.10"
  },
  "autoload": {
    "psr-4": {
      "Botasis\\Client\\Telegram\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Botasis\\Client\\Telegram\\Tests\\": "tests"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true,
      "php-http/discovery": false
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
