{
  "name": "boatsis/telegram-client",
  "type": "library",
  "description": "Yet another PHP Telegram bot client",
  "keywords": ["php", "telegram", "bot", "telegram bot"],
  "license": "BSD-3-Clause",
  "support": {
    "issues": "https://github.com/botasis/telegram-bot/issues?state=open",
    "chat": "https://t.me/viktorprogger_blog",
    "source": "https://github.com/botasis/telegram-bot"
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^8.2",
    "php-http/discovery": "^1.15",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0",
    "psr/log": "^1.0.0||^2.0.0||^3.0.0",
    "yiisoft/friendly-exception": "^1.1"
  },
  "require-dev": {
    "maglnet/composer-require-checker": "^4.5",
    "phpunit/phpunit": "^9.5",
    "roave/infection-static-analysis-plugin": "^1.16",
    "symfony/console": "^6.2",
    "symfony/http-client": "^6.2",
    "vimeo/psalm": "^5.4"
  },
  "suggest": {
    "symfony/http-client": "^6.0",
    "yiisoft/yii-console": "^1.0",
    "httpsoft/http-message": "^1.0.10"
  },
  "autoload": {
    "psr-4": {
      "Botasis\\Client\\Telegram\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Botasis\\Client\\Telegram\\Tests\\": "tests"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true,
      "php-http/discovery": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    },
    "config-plugin-options": {
      "source-directory": "config"
    },
    "config-plugin": {
      "common": "common.php",
      "params": "params.php"
    }
  }
}
